{{#partial "content"}}
    <div style="background-image: url('/images/elephant2.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover;">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="endangered-heading">
                    <h1>Non-Endangered Animals</h1>
                </div>

                {{#if nonEndangeredAnimals}}
                    {{#each nonEndangeredAnimals}}
                        <table class="table table-dark table-hover">
                            <thead>
                            <tr>
                                <th>Animal</th>
                                <th>Age</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>

                                <td>{{name}}</td>
                                <td>{{age}}</td>
                                <td><a href="#" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i>Delete</a></td>

                            </tr>
                            </tbody>

                        </table>
                    {{/each}}
                {{else}}
                    <h1>No Non-Endangered Animals!!</h1>
                {{/if}}

            </div>
            <div class="col-md-3"></div>

        </div>

    </div>
{{/partial}}

{{> layout.hbs}}