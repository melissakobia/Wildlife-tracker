{{#partial "content"}}
    <div style="background-image: url('/images/elephant2.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover;">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                    <div class="container endangered-heading">
                        <h1>Endangered Animals</h1>

                    </div>
                    {{#if endangeredAnimals}}
                        {{#each endangeredAnimals}}
                            <table class="table table-dark table-hover">
                                <thead>
                                <tr>
                                    <th>Animal</th>
                                    <th>Age</th>
                                    <th>Health</th>

                                </tr>
                                </thead>
                                <tbody>
                                <tr>

                                    <td>{{name}}</td>
                                    <td>{{age}}</td>
                                    <td>{{health}}</td>
                                    <td><a href="#" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i>Delete</a></td>

                                </tr>
                                </tbody>

                            </table>
                        {{/each}}
                    {{else}}
                        <h1>No Endangered Animals</h1>
                    {{/if}}

                </div>
            <div class="col-md-3" ></div>


            </div>
        </div>
{{/partial}}

{{> layout.hbs}}